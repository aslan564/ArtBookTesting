<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aslan.aslan.artbooktesting">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ArtApplication"
        android:icon="@drawable/aslan_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/aslan_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArtbookTesting">
        <activity android:name=".ui.activity.splash.StartActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".ui.activity.main.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>